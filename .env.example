# Restaurant Duty PWA - Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# Google API Configuration
# ===========================================

# Google Cloud Project ID
GOOGLE_PROJECT_ID=your-project-id

# Service Account Email
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project-id.iam.gserviceaccount.com

# Service Account Private Key (base64 encoded for security)
# Encode with: cat key.json | base64
GOOGLE_SERVICE_ACCOUNT_KEY=base64-encoded-key-here

# Google Sheets ID for logging
# Get from the sheet URL: https://docs.google.com/spreadsheets/d/{SHEET_ID}/edit
GOOGLE_SHEETS_ID=your-google-sheets-id

# Google Drive Folder ID for PDF uploads
# Get from the folder URL: https://drive.google.com/drive/folders/{FOLDER_ID}
GOOGLE_DRIVE_FOLDER_ID=your-drive-folder-id

# ===========================================
# App Configuration
# ===========================================

# Restaurant name (shown in headers and PDFs)
NEXT_PUBLIC_RESTAURANT_NAME=Your Restaurant Name

# App version (auto-populated from package.json in production)
NEXT_PUBLIC_APP_VERSION=1.0.0

# Enable debug logging
NEXT_PUBLIC_DEBUG=false

# ===========================================
# Feature Flags
# ===========================================

# Enable offline mode (default: true)
NEXT_PUBLIC_OFFLINE_ENABLED=true

# Enable PDF generation (default: true)
NEXT_PUBLIC_PDF_ENABLED=true

# Enable auto-sync (default: true)
NEXT_PUBLIC_AUTO_SYNC=true
